package entities;

public class Product {
	
	public String name;
	public double price;
	public int quantity;
	
		public double TotalValueInStock() {
			
			double total = price * quantity;
			return total;
			
		}
		
		public void AddProducts(int quantity) {
			 quantity += TotalValueInStock();
		}
		
		public void RemoveProducts(int quantity) {
			quantity -= TotalValueInStock();
		}
	
	
}
