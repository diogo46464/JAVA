import java.util.Locale;
import java.util.Scanner;

public class Main {
	
	public static void main(String[] args) {
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner (System.in);
		
		
		
		int N = sc.nextInt();
		
		double valor1 = 0.0;
		double valor2 = 0.0;
		double valor3 = 0.0;
		double mediaPonderada1;
		double mediaPonderada2;
		double mediaPonderada3;
		

		
		for(int i = 0; i < N; i++) {
			
			 valor1 = sc.nextDouble();
			 valor2 = sc.nextDouble();
			 valor3 = sc.nextDouble();
			 
			 mediaPonderada1 = valor1 + valor2 + valor3 / 2.0;
			 mediaPonderada2 = valor1 + valor2 + valor3 / 3.0;
			 mediaPonderada3 = valor1 + valor2 + valor3 / 5.0;
			
			
		}
		
		
		sc.close();
		
		
	}

}
